# ================================
# Backend Environment Configuration
# Copy this file to .env and update with your actual values
# ================================

# ============== Database ==============
DB_USER=ansible_user
DB_PASSWORD=ansible_pass
DB_HOST=localhost
DB_PORT=3307
DB_NAME=ansible_hub

# Alternative: Full database URL (choose one method)
DATABASE_URL=mysql+pymysql://ansible_user:ansible_pass@localhost:3307/ansible_hub

# ============== Application ==============
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
API_VERSION=1.0.0

# ============== Server ==============
HOST=0.0.0.0
PORT=8000

# ============== CORS ==============
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000

# ============== AI / MCP Server ==============
# URL of your MCP (Model Context Protocol) server for AI features
# Leave empty to use fallback responses
MCP_SERVER_URL=http://localhost:3001/api/chat
MCP_HEALTH_URL=http://localhost:3001/health

# ============== SSH ==============
# Default SSH connection settings
# Note: SSH user should be configured per inventory in the config field
# Format: server_name ansible_ssh_host=IP ansible_ssh_port=22 ansible_ssh_user=username ansible_ssh_pass=password
DEFAULT_SSH_USER=root
SSH_TIMEOUT=5

# ============== Logging ==============
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ============== Security ==============
# JWT settings (if implementing authentication)
# JWT_SECRET_KEY=your-jwt-secret-key
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30
